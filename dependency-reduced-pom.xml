<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.otojunior</groupId>
  <artifactId>sample-quickstart</artifactId>
  <name>Project sample-quickstart</name>
  <version>1.0-SNAPSHOT</version>
  <url>http://www.org.otojunior/sample-quickstart</url>
  <scm>
    <developerConnection>scm:git:[Git Repo URL]</developerConnection>
  </scm>
  <organization>
    <name>Organization org.otojunior</name>
    <url>http://www.org.otojunior</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${plugin.version.maven-jar-plugin}</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <mainClass>org.otojunior.sample.AplicacaoCorreios</mainClass>
            </manifest>
            <manifestEntries>
              <Implementation-Build>${buildNumber}</Implementation-Build>
              <Implementation-Branch>${scmBranch}</Implementation-Branch>
              <Implementation-Date>${timestamp}</Implementation-Date>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${plugin.version.maven-shade-plugin}</version>
        <configuration>
          <minimizeJar>false</minimizeJar>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${plugin.version.maven-compiler-plugin}</version>
        <configuration>
          <source>${plugin.version.java}</source>
          <target>${plugin.version.java}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>${plugin.version.maven-source-plugin}</version>
        <executions>
          <execution>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>${plugin.version.maven-javadoc-plugin}</version>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <excludePackageNames>${configuration.package.jaxwsimport}</excludePackageNames>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>${plugin.version.maven-release-plugin}</version>
        <configuration>
          <tagNameFormat>v@{project.version}</tagNameFormat>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
        <version>${plugin.version.buildnumber-maven-plugin}</version>
        <executions>
          <execution>
            <phase>validate</phase>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <revisionOnScmFailure>true</revisionOnScmFailure>
          <shortRevisionLength>8</shortRevisionLength>
          <timestampFormat>{0,date,dd/MM/yyyy HH:mm:ss}</timestampFormat>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxws-maven-plugin</artifactId>
        <version>${plugin.version.jaxws-maven-plugin}</version>
        <executions>
          <execution>
            <goals>
              <goal>wsimport</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <packageName>${configuration.package.jaxwsimport}</packageName>
          <wsdlUrls>
            <wsdlUrl>https://apps.correios.com.br/SigepMasterJPA/AtendeClienteService/AtendeCliente?wsdl</wsdlUrl>
          </wsdlUrls>
          <verbose>true</verbose>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>mvnrepo-release-${project.artifactId}</id>
      <url>file://${project.build.directory}/mvn-repo/release</url>
    </repository>
    <snapshotRepository>
      <id>mvnrepo-snapshot-${project.artifactId}</id>
      <url>file://${project.build.directory}/mvn-repo/snapshot</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <plugin.version.maven-release-plugin>2.5</plugin.version.maven-release-plugin>
    <plugin.version.maven-shade-plugin>2.3</plugin.version.maven-shade-plugin>
    <plugin.version.jaxws-maven-plugin>2.4.1</plugin.version.jaxws-maven-plugin>
    <plugin.version.maven-jar-plugin>2.4</plugin.version.maven-jar-plugin>
    <configuration.package.jaxwsimport>org.otojunior.sample.soap</configuration.package.jaxwsimport>
    <dependency.version.slf4j>1.7.6</dependency.version.slf4j>
    <plugin.version.maven-javadoc-plugin>2.10.4</plugin.version.maven-javadoc-plugin>
    <dependency.version.easymock>3.2</dependency.version.easymock>
    <dependency.version.junit>4.11</dependency.version.junit>
    <plugin.version.buildnumber-maven-plugin>1.3</plugin.version.buildnumber-maven-plugin>
    <plugin.version.maven-surefire-plugin>2.16</plugin.version.maven-surefire-plugin>
    <plugin.version.maven-source-plugin>2.2.1</plugin.version.maven-source-plugin>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <plugin.version.java>1.8</plugin.version.java>
    <plugin.version.maven-compiler-plugin>3.5.1</plugin.version.maven-compiler-plugin>
  </properties>
</project>

